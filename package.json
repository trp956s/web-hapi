{
  "name": "web-hapi",
  "version": "1.0.0",
  "description": "example hapi.js REST server for addresses",
  "main": "index.js",
  "scripts": {
    "dev-station-setup": "brew install mongodb",
    "test": "concurrently \"npm start\" \"node -e 'setTimeout(function() {}, 5000);' && jasmine-node --verbose . && jasmine\" --kill-others --success all",
    "start": "npm run db-up && node api/server",
    "db-down": "node ./package-scripts/shutdown-db",
    "db-up": "node ./package-scripts/bootup-db",
    "unit-tests": "jasmine jasmineConfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trp956s/web-hapi.git"
  },
  "author": "tom pepe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trp956s/web-hapi/issues"
  },
  "homepage": "https://github.com/trp956s/web-hapi#readme",
  "dependencies": {
    "hapi": "^16.5.2",
    "hapi-swagger": "^7.7.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "frisby": "^2.0.2",
    "jasmine": "^2.7.0",
    "jasmine-node": "^1.14.5",
    "mongodb": "^2.2.31",
    "shelljs": "^0.7.8"
  }
}
